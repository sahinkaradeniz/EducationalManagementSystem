<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EYS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- üst ana renk. -->
        <item name="colorPrimaryVariant">@color/lightred</item>
        <item name="colorOnPrimary">@color/white5</item> <!-- button ici renkler . -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item><!-- takvim recili renk, switch secilme rengi -->
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/darkred</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" >@color/grey</item><!-- en üst saat kısmı rengi. -->
        <!-- Customize your theme here. -->
        <item name="android:colorBackground" >@color/grey</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>